generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Todo {
  id        Int       @id @default(autoincrement())
  title     String
  dueDate   DateTime? // Optional due date field
  imageUrl  String?   // Cached image URL from Pexels
  createdAt DateTime  @default(now())
}